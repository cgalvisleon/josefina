{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "leader",
      "type": "go",
      "request": "launch",
      "mode": "debug",
      "program": "${workspaceFolder}/cmd/server",
      "args": ["-port", "3500", "-rpc", "4200"],
      "cwd": "${workspaceFolder}",
      "envFile": "${workspaceFolder}/.env"
    },
    {
      "name": "follow",
      "type": "go",
      "request": "launch",
      "mode": "debug",
      "program": "${workspaceFolder}/cmd/server",
      "args": [
        "-port",
        "3600",
        "-rpc",
        "4300",
        "-leader",
        "Cesars-MacBook-Pro.local:4200"
      ],
      "cwd": "${workspaceFolder}",
      "envFile": "${workspaceFolder}/.env"
    }
  ],
  "compounds": [
    {
      "name": "cluster",
      "configurations": ["leader", "follow"],
      "stopAll": true
    }
  ]
}
